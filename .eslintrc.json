{
  "root": true,
  "extends": ["airbnb-base", "prettier", "plugin:json/recommended"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "import/prefer-default-export": "off",
    "no-console": "error",
    "no-await-in-loop": "off",
    "no-return-await": "off",
    "class-methods-use-this": "off",
    "sort-imports": [
      "error",
      {
        "ignoreDeclarationSort": true
      }
    ],
    "no-param-reassign": "off"
  },
  "env": {
    "browser": true,
    "es6": true,
    "commonjs": true,
    "webextensions": true
  },
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["prettier"],
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["src"]
      }
    }
  }
}
